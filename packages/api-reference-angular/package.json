{
  "name": "@scalar/api-reference-angular",
  "description": "Angular integration for Scalar API References",
  "license": "MIT",
  "author": "Scalar (https://github.com/scalar)",
  "homepage": "https://github.com/scalar/scalar",
  "bugs": "https://github.com/scalar/scalar/issues/new/choose",
  "repository": {
    "type": "git",
    "url": "https://github.com/scalar/scalar.git",
    "directory": "packages/api-reference-angular"
  },
  "keywords": [
    "api",
    "reference",
    "angular",
    "scalar"
  ],
  "version": "0.0.1",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "ng-packagr -p ng-package.json",
    "dev": "vite",
    "lint:check": "eslint .",
    "lint:fix": "eslint .  --fix",
    "preview": "vite preview",
    "test": "vitest",
    "types:build": "tsc -p tsconfig.build.json",
    "types:check": "tsc --noEmit --skipLibCheck --composite false"
  },
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./css/*.css": {
      "import": "./dist/css/*.css",
      "require": "./dist/css/*.css"
    },
    "./*.css": {
      "import": "./dist/*.css",
      "require": "./dist/*.css"
    }
  },
  "files": [
    "dist",
    "CHANGELOG.md"
  ],
  "module": "dist/index.js",
  "bundledDependencies": [
    "vue",
    "@scalar/api-reference"
  ],
  "dependencies": {
    "@scalar/api-reference": "workspace:*",
    "vue": "^3.4.27"
  },
  "devDependencies": {
    "@angular/compiler": "^17.3.0",
    "@angular/core": "^17.3.10",
    "@angular/platform-browser": "^17.3.0",
    "@scalar/build-tooling": "workspace:*",
    "ng-packagr": "^17.3.0",
    "tsc-alias": "^1.8.8",
    "tslib": "^2.6.2",
    "vite": "^5.2.10"
  }
}
